# CS2 Betting System Environment Configuration
# Copy this file to .env and fill in your actual values

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/cs2_betting
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Scraping Configuration
SELENIUM_HUB_URL=http://localhost:4444/wd/hub
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver
HEADLESS_MODE=true
SCRAPER_DELAY_MIN=2
SCRAPER_DELAY_MAX=5
MAX_RETRIES=3

# Proxy Configuration (optional)
PROXY_LIST=proxy1:port,proxy2:port,proxy3:port
PROXY_USERNAME=
PROXY_PASSWORD=
ROTATE_PROXIES=true

# User Agent Rotation
ROTATE_USER_AGENTS=true
CUSTOM_USER_AGENTS=

# Betting APIs
ONEXBET_API_KEY=your_key_here
BETWAY_API_KEY=your_key_here
PINNACLE_API_KEY=your_key_here
PINNACLE_USERNAME=your_username
PINNACLE_PASSWORD=your_password

# Optional: Odds API alternatives
ODDSAPI_KEY=your_key_here
BETFAIR_APP_KEY=your_key_here

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
DISCORD_ALERTS_ENABLED=true

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ALERTS_ENABLED=true

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=alerts@yourdomain.com
EMAIL_ALERTS_ENABLED=false

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook
SLACK_ALERTS_ENABLED=false

# Risk Management
INITIAL_BANKROLL=1000.0
MAX_DAILY_RISK=0.05
MAX_POSITION_SIZE=0.02
KELLY_FRACTION=0.25
MIN_EDGE_THRESHOLD=0.05
COOLDOWN_MINUTES=30

# Model Configuration
MODEL_PATH=models/cs2_simple_model.pkl
FEATURE_CACHE_TTL=3600
PREDICTION_CONFIDENCE_THRESHOLD=0.6
RETRAIN_INTERVAL_HOURS=24

# Monitoring
PROMETHEUS_PORT=8000
METRICS_ENABLED=true
LOG_LEVEL=INFO
LOG_FILE=logs/cs2_betting.log

# Performance
MAX_CONCURRENT_SCRAPES=5
REDIS_CONNECTION_POOL_SIZE=10
HTTP_TIMEOUT=30
SCRAPER_TIMEOUT=60

# Development
DEBUG=false
TESTING=false
MOCK_ODDS=false
PAPER_TRADING=true

# Security
SECRET_KEY=your_secret_key_here
API_KEY=your_api_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Kubernetes/Docker
NAMESPACE=cs2-betting
REPLICA_COUNT=2
RESOURCE_LIMITS_CPU=500m
RESOURCE_LIMITS_MEMORY=512Mi
